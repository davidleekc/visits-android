<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorHyperTrackGreen</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CancelButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/bg_cancel_button</item>
    </style>

    <style name="LightButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/bg_light_button</item>
    </style>

    <style name="TextButtonStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/colorHyperTrackGreen</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="MinorButtonStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/colorTakePicture</item>
        <item name="android:background">@drawable/bg_minor_button</item>
    </style>

    <style name="SmallTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LoaderDialog" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
